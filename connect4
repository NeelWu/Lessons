  currPlayer = 1
  
  
  def drawBoard():
    print(" 1 2 3 4 5 6 7")
    
    for row in board:
      for item in row:
        if item == 0:
          print ("â¬œ", end="")
        elif item == 1:
          print ("ğŸ”´", end="")
        else:
          print ("ğŸ”µ", end="")
        
      print("")
  
  def addPiece(location, currPlayer):
    for i in range(6):
      if board [5-i][location-1] == 0:
        board [5-i][location-1] = currPlayer
        break
      
      
  def checkWin(currPlayer):
    for i in range(7):
      for j in range(3):
        if board[0+j][i] == currPlayer and board[1+j][i] == currPlayer and board[2+j][i] == currPlayer and board[3+j][i] == currPlayer:
          return True
    
    for k in range(6):
      for l in range(4):
        if board[k][0+l] == currPlayer and board[k][1+l] == currPlayer and board[k][2+l] == currPlayer and board[k][3+l] == currPlayer:
          return True
          
    for i in range (3):
      for j in range (4):
        if board[i][j] == currPlayer and board[1+i][1+j] == currPlayer and board[2+i][2+j] ==currPlayer and board[3+i][3+j] == currPlayer:
         return True
    for i in range (3):
      for j in range (4):
        if board[i][3+j] == currPlayer and board [1+i][2+j] == currPlayer and board[2+i][1+j] == currPlayer and board[3+i][j] == currPlayer:
          return True
    
    else:
      return False
    
  
  os.system("clear")
  

  
  while True:
    if checkWin(2 if currPlayer == 1 else 1):
      os.system("clear")
      if currPlayer == 2:
        print("Red has won!")
      else:
        print("Blue has won!")
      print()
      drawBoard()
      
      playAgain = input ("Would you like to play again (yes or no)? ")
      if playAgain[0].lower() == "n":
        keepPlaying = False
        print ("Thank you for playing")
        break
      if playAgain[0].lower() == "y":
        break

    drawBoard()
    if currPlayer == 1:
      print ("\n It is ğŸ”´'s turn")
