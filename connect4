        os.system("clear")
        print ("Invalid location to play")
        print()
        continue
    except:
      os.system("clear")
      print("Please enter a number")
      print()
      continue
    addPiece(int(location), currPlayer)
    os.system("clear")
    
    if currPlayer == 1:
      currPlayer= 2
    elif currPlayer == 2:
      currPlayer = 1
    
    
  
  
